# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf

[*.yml]
indent_size = 2

# Fantomas (see https://fsprojects.github.io/fantomas/docs/end-users/Configuration.html)
[*.{fs,fsi,fsx}]
max_line_length = 100
fsharp_keep_max_number_of_blank_lines = 2
fsharp_max_infix_operator_expression = 40
fsharp_bar_before_discriminated_union_declaration = true
fsharp_multi_line_lambda_closing_newline = true
fsharp_align_function_signature_to_indentation = true
fsharp_max_if_then_else_short_width = 0
fsharp_alternative_long_member_definitions = true
fsharp_multiline_bracket_style = aligned
fsharp_experimental_elmish = true
fsharp_record_multiline_formatter = number_of_items
fsharp_array_or_list_multiline_formatter = number_of_items
fsharp_max_array_or_list_number_of_items = 1
fsharp_max_record_number_of_items = 0
